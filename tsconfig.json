{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "lib/",
    "rootDir": "src/",
    "strict": true,
    "target": "es5",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@playwright/test"]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
